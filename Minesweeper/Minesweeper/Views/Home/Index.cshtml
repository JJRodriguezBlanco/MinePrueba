@{
    ViewBag.Title = "Minesweeper";
}


@Html.Hidden("urlCalculation", @Url.Action("Calculation", "Home"))

<div class="jumbotron" style="text-align: center;">
    <img src="@Url.Content("~/Images/boom.png")" width="40%" height="40%">
    <div style="text-align: left;">
        <p class="lead">Have you ever played Minesweeper? It’s a cute little game which comes within a certain Operating System which name we can’t really remember. Well, the goal of the game is to find where are all the mines within a M × N field. To help you, the game shows a number in a square which tells you how many mines there are adjacent to that square.</p>
        @Html.ActionLink(HttpUtility.HtmlDecode("Learn more &raquo;"), "About", "Honme", new { @class = "btn btn-primary btn-lg" })
    </div>
</div>

<h1>Minesweeper</h1>
<br>
<div class="row">
    <div class="col-md-2">
        @Html.Label("Parameters Input: ")
    </div>
    <div class="col-md-3">
        @Html.TextBox("TextInput", null, new { @class = "form-control", @onkeypress = " return Mine.Index.IsNumberKeyEnterosAndAsterisk(event)" })
    </div>
    <div class="col-md-4">
        <a onclick="Mine.Index.Input();" href="javascript:;" title="jaja" class="btn btn-primary btn-lg" id="Input">Insert</a>
    </div>
</div>
<br><br>
<div style="text-align: center;">
    <a onclick="Mine.Index.ClearAreas();" href="javascript:;" title="jeje" class="btn btn-primary btn-lg" style="background-color:darkorange" id="ClearAreas">&laquo; Clear Areas &raquo;</a><br>
</div>
<div class="row">
    <div class="col-md-4" style="text-align: center;">
        @Html.Label("--- Input ---")
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-4" style="text-align: center;">
        @Html.Label("--- Output ---")
    </div>
</div>
<div class="row">
    <div class="col-md-4" style="text-align: center;">
        @Html.TextArea("areaIntput", "", new
        {
            @id = "AreaIntput",
            @class = "k-textbox",@disabled = "disabled",@cols = "50",
            @rows = "10",
            @style = "font-size:30px;"
        })
    </div>
    <div class="col-md-4" style="height: 400px; text-align: center; line-height: 400px; ">      
        <a onclick="Mine.Index.Output();" href="javascript:;" title="Output" class="btn btn-primary btn-lg" style="background-color:mediumseagreen" id="Output">Resolve &raquo;</a>      
    </div>
    <div class="col-md-4" style="text-align: center; height:100% ">
        @Html.TextArea("areaOutput", "", new { @id = "AreaOutput", @class = "k-textbox", @disabled = "disabled", @cols = "50", @rows = "10", @style = "font-size:30px;" })
    </div>
</div>

@Scripts.Render("~/bundles/Index")